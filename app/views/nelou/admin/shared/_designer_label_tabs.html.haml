- @nelou_designer_label = @designer_label if @designer_label.present?
- content_for :page_title do
  = @nelou_designer_label.name
- content_for :sidebar do
  %ul.nav.nav-pills.nav-stacked{"data-hook" => "admin_product_tabs"}
    = content_tag :li, class: ('active' if current == :details) do
      = link_to_with_icon 'edit', Spree.t(:details), main_app.edit_admin_nelou_designer_label_path(@nelou_designer_label)
    = content_tag :li, class: ('active' if current == 'Translations') do
      = link_to_with_icon 'translate', Spree.t(:'i18n.translations'), spree.admin_translations_url('designer_label', @nelou_designer_label.id), title: Spree.t(:'i18n.translations')
