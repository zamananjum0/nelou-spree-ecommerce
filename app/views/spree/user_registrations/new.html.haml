.registration-box
  %h2.registration-box-caption= t('.registering_is_worth_it')
  %p.registration-box-explanation= t('.registration_explanation')
  = form_for resource, as: :spree_user, url: spree.registration_path do |f|
    %fieldset.registration-form-inputs
      .registration-form-group
        = f.label :email, class: 'registration-label'
        = f.email_field :email, required: true, autofocus: true, class: 'registration-field string', tabindex: 1
      .registration-form-group
        = f.label :password, class: 'registration-label'
        = f.password_field :password, required: true, class: 'registration-field string', tabindex: 2
      .registration-form-group
        = f.label :password_confirmation, class: 'registration-label'
        = f.password_field :password_confirmation, required: true, class: 'registration-field string', tabindex: 3
      .registration-form-group
        %label.registration-label.checkbox
          = f.check_box :subscribed, class: 'registration-field boolean', tabindex: 4
          = f.label :subscribed, t('.i_want_the_newletter')
      .registration-form-group
        %label.registration-label.checkbox
          = f.check_box :privacy_and_conditions, class: 'registration-field boolean', required: true, tabindex: 5
          = f.label :privacy_and_conditions, t('.i_agree_to_privacy_and_conditions', href: link_to(t('.privacy_and_conditions'), main_app.privacy_url, target: '_blank')).html_safe
      .registration-form-group
        %label.registration-label.checkbox
          = f.check_box :terms_and_services,  class: 'registration-field boolean', required: true, tabindex: 6
          = f.label :terms_and_services, t('.i_agree_to_terms_and_services', href: link_to(t('.terms_and_services'), main_app.terms_of_use_url, target: '_blank')).html_safe
    .registration-form-actions
      = f.button t('.sign_up'), class: 'registration-box-button', tabindex: 7
  = render 'shared/user_links'
