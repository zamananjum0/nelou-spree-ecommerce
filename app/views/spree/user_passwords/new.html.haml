.password-box
  %h2.password-box-caption= t('.forgot_your_password')
  = form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f|
    .password-form-group
      = f.label :email, class: 'password-label'
      = f.email_field :email, required: true, autofocus: true, class: 'password-field string'
    .password-form-actions
      = f.button t('.send_password_instructions'), class: 'password-box-button'
  .password-box-links
    = render 'shared/user_links'
